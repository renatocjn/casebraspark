<!doctype html>
<html lang='pt-br'>
<head>
  <title>Casebrás Park</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <%= favicon_link_tag %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
<nav class="navbar navbar-expand-xl navbar-light bg-light rounded mt-3">
  <%= link_to :root, class: "navbar-brand" do %>
    <%= image_tag :logo_casebras, width: "30px", heigth: "30px" %>
    CasePark
  <% end %>
  <div class="collapse navbar-collapse">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="parkMovesdropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <%= fa_icon("exchange-alt", text:"Movimentações") %></a>
        <div class="dropdown-menu" aria-labelledby="parkMovesdropdown">
          <%= link_to fa_icon("cart-arrow-down", text: "Aquisições"), acquisitions_path, class: "dropdown-item" %>
          <%= link_to fa_icon("share", text:"Alocações"), allocations_path, class: "dropdown-item" %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="parkMovesdropdown2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><%= fa_icon("cube", text: "Itens") %></a>
        <div class="dropdown-menu" aria-labelledby="parkMovesdropdown2">
          <%= link_to fa_icon("tags", text:"Com plaqueta"), items_path, class: "dropdown-item" %>
          <%= link_to fa_icon("ban", class: "fa-lg", text: "Sem plaqueta"), stock_items_path, class: "dropdown-item" %>
        </div>
      </li>
      <li class="nav-item"> <%= link_to fa_icon("map-marker-alt", text:"Localidades"), placements_path, class: "nav-link" %> </li>
      <li class="nav-item"> <%= link_to fa_icon("users", text:"Operadores"), operators_path, class: "nav-link" %> </li>
      <li class="nav-item"> <%= link_to fa_icon("building", text:"Empresas"), companies_path, class: "nav-link" %> </li>
      <li class="nav-item"> <%= link_to fa_icon("shopping-basket", text:"Fornecedores"), suppliers_path, class: "nav-link" %> </li>
    </ul>
    <ul class="navbar-nav">
      <li class="nav-item"> <%= link_to fa_icon(:user, text: current_user.name.split.first), current_user, class: "nav-link" %> </li>
      <li class="nav-item"> <%= link_to fa_icon("sign-out-alt", text:"Sair"), logout_path, class: "btn btn-danger" %> </li>
    </ul>
  </div>
</nav>

<% if flash.notice %>
  <div class="alert alert-info alert-dismissible fade show w-50 mx-auto text-center my-3 rounded" style="min-width: 20em" role="alert">
    <p id="notice"><%= flash.notice %></p>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true"> <%= fa_icon(:times) %></span>
    </button>
  </div>
<% end %>

<% if flash.alert %>
  <div class="alert alert-warning alert-dismissible fade show w-50 mx-auto text-center my-3 rounded" style="min-width: 20em" role="alert">
    <p id="notice"><%= flash.alert %></p>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true"> <%= fa_icon(:times) %></span>
    </button>
  </div>
<% end %>

<div id='content' style="min-height: 600px">
  <%= yield %>
</div>

<footer class="footer mt-5 bg-light text-muted text-right p-2 rounded">
Sistema de Park Casebrás | contato: helpdesk@casebras.com.br | <%= fa_icon(:copyright, text: 2018) %>
</footer>

</div>

<%= javascript_include_tag "font-awesome" %>

</body>
</html>
