<!doctype html>
<html lang='pt-br'>
<head>
  <title>Casebrás Park</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
  <script src="https://use.fontawesome.com/0d709543da.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <%= favicon_link_tag %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">

<nav class="navbar navbar-expand-xl navbar-light bg-light rounded mt-3">
  <%= link_to :root, class: "navbar-brand" do %>
    <%= image_tag :logo_casebras, width: "30px", heigth: "30px" %>
    CasePark
  <% end %>
  <div class="collapse navbar-collapse">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="parkMovesdropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Movimentações</a>
        <div class="dropdown-menu" aria-labelledby="parkMovesdropdown">
          <%= link_to "Aquisições", acquisitions_path, class: "dropdown-item" %>
          <%= link_to "Alocações", allocations_path, class: "dropdown-item" %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="parkMovesdropdown2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Items</a>
        <div class="dropdown-menu" aria-labelledby="parkMovesdropdown2">
          <%= link_to "Com plaqueta", items_path, class: "dropdown-item" %>
          <%= link_to "Sem Plaqueta", stock_items_path, class: "dropdown-item" %>
        </div>
      </li>
      <li class="nav-item"> <%= link_to "Localidades", placements_path, class: "nav-link" %> </li>
      <li class="nav-item"> <%= link_to "Operadores", operators_path, class: "nav-link" %> </li>
      <li class="nav-item"> <%= link_to "Empresas", companies_path, class: "nav-link" %> </li>
      <li class="nav-item"> <%= link_to "Fornecedores", suppliers_path, class: "nav-link" %> </li>
    </ul>
    <ul class="navbar-nav">
      <li class="nav-item"> <%= link_to current_user.name, current_user, class: "nav-link" %> </li>
      <li class="nav-item"> <%= link_to "Sair", logout_path, class: "nav-link" %> </li>
    </ul>
  </div>
</nav>

<% if flash.notice %>
  <div class="alert alert-info alert-dismissible fade show w-50 mx-auto text-center my-3 rounded" style="min-width: 20em" role="alert">
    <p id="notice"><%= flash.notice %></p>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true"> <%= fa_icon(:times) %></span>
    </button>
  </div>
<% end %>

<% if flash.alert %>
  <div class="alert alert-warning alert-dismissible fade show w-50 mx-auto text-center my-3 rounded" style="min-width: 20em" role="alert">
    <p id="notice"><%= flash.alert %></p>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true"> <%= fa_icon(:times) %></span>
    </button>
  </div>
<% end %>

<div id='content' style="min-height: 600px">
  <%= yield %>
</div>

<footer class="footer mt-5 bg-light text-muted text-right p-2 rounded">
Sistema de Park Casebrás | contato: helpdesk@casebras.com.br | <%= fa_icon(:copyright, text: 2017) %>
</footer>

</div>

</body>
</html>
