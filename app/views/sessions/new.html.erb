

<!doctype html>
<html lang='pt-br'>
<head>
  <title>Casebrás Park</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <%= favicon_link_tag %>
  <%= csrf_meta_tags %>
</head>

<body>
<div class="container d-flex pt-5 justify-content-center align-middle">
<div class="card w-25 p-3" style="min-width: 20em">
  <%= image_tag :selo_casebras, alt: "Logo Casebrás", class: "card-img-top" %>
  <div class="card-body">
    <h4 class="card-title text-center">Sistema de Park Casebrás</h4>
    <%= form_tag '/login' do %>
      <p id='notice' class="text-center text-danger"> <%= notice %> </p>
      <label>Insira seu e-mail:</label> <%= email_field :email, "", class: "form-control", placeholder: "nome@casebras.com.br" %> <br>
      <label>Insira sua senha:</label> <%= password_field_tag :password, "", class: "form-control" %> <br>
      <%= submit_tag "Entrar", class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
</div>
</div>
</body>