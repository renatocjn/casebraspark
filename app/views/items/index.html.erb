<p id="notice"><%= notice %></p>

<h1>Lista de Itens no Inventário</h1>

<table>
  <thead>
    <tr>
      <th>Descrição Curta</th>
      <th>Descrição Longa</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.shortDescription %></td>
        <td><%= item.longDescription %></td>
        <td><%= item.value %></td>
        <td><%= link_to 'Detalhes', item %></td>
        <td><%= link_to 'Editar', edit_item_path(item) %></td>
        <td><%= link_to 'Excluir', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

