<p id="notice"><%= notice %></p>

<h1>Lista de Itens no Inventário</h1>

<table>
  <thead>
    <tr>
      <th>Plaqueta</th>
      <th>Tipo</th>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Número Serial</th>
      <th>Valor</th>
      <th>Localização Atual</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.plate, item_path(item) %></td>
        <td><%= item.item_type.name %></td>
        <td><%= item.brand %></td>
        <td><%= item.model %></td>
        <td><%= item.serial %></td>
        <td><%= item.value %></td>
        <td><%= item.placements.order("created_at DESC").first %></td>
        <td><%#= link_to 'Detalhes', item %></td>
        <td><%= link_to 'Editar', edit_item_path(item) %></td>
        <td><%= link_to 'Excluir', item, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

