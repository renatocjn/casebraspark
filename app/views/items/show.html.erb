
<div class="row">
  <div class="col">
    <table class="table">
      <tr>
        <td class="w-25"><label>Plaqueta:</label></td>
        <td><%= @item.plate %></td>
      </tr>

      <tr>
        <td class="w-25"><label>Descrição:</label></td>
        <td><%= @item.to_s %></td>
      </tr>

      <tr>
        <td class="w-25"><label>Número serial:</label></td>
        <td><%= @item.serial %></td>
      </tr>

      <tr>
        <td class="w-25"><label>Valor:</label></td>
        <td><%= number_to_currency @item.value %></td>
      </tr>
    </table>
  </div>

  <div class="col">
    <table class="table">
      <tr> <td colspan="2">
        <div class="d-flex justify-content-around">
          <%= link_to fa_icon(:pencil, text: "Editar"), edit_item_path(@item), class: "btn btn-primary btn-block m-0 mx-1" %>
          <%= link_to fa_icon(:list, text: "Voltar"), :back, class: "btn btn-secondary btn-block m-0 mx-1" %>
        </div>
      </td> </tr>

      <%= render @item.parkable_item_type.downcase.pluralize+"/show", item: @item.parkable_item %>

      <tr>
        <td colspan="2"> <%= link_to fa_icon("info-circle", text: "Ver aquisição deste produto"), @item.acquisition, class:"text-info" %> </td>
      </tr>

      <tr>
        <td class="w-50"><label>Foi Descartado?</label></td>
        <td><%= @item.isDischarged ? fa_icon(:check, text:"Sim") : fa_icon(:times, text:"Não") %></td>
      </tr>
    </table>
  </div>
</div>

<% if @item.isDischarged %>
  <div class="row">
    <div class="col">
      <table class="table">
        <tr>
          <td class="w-25"><label>Descrição do descarte:</label></td>
          <td> <%= simple_format @item.dischargeDescription %> </td>
        </tr>
      </table>
    </div>
  </div>
<% end %>


<div class="row text-center">
  <div class="col border rounded p-2 m-2">
    <h5 class="d-inline">Últimas alocações</h5>
    <div class="d-inline float-right">
      <%= link_to_prev_page @allocations, fa_icon("chevron-left"), param_name: :al_page %>
      <%= link_to_next_page @allocations, fa_icon("chevron-right"), param_name: :al_page %>
    </div>
    <table class="table table-sm table-hover">
      <tr>
        <th class="col-4" scope="col">Data</th>
        <th class="col-4" scope="col">Local</th>
        <th class="col-4" scope="col">Responsável</th>
        <th class="col-auto"></th>
      </tr>
    <% @allocations.each do |allocation| %>
      <tr scope="row">
        <td class="col-4"><%= localize allocation.created_at.to_date %></td>
        <td class="col-4"><%= link_to allocation.destination, allocation.destination, class: "text-info"%></td>
        <td class="col-4"><%= link_to allocation.operator, allocation.operator, class: "text-info" %></td>
        <td class="col-auto"><%= link_to fa_icon("info-circle"), allocation, class: "text-info" %></td>
      </tr>
    <% end %>
      <tr> <td colspan="4"> <small> <%= page_entries_info @allocations %> </small> </td> </tr>
    </table>
  </div>
</div>
