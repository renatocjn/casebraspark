<%= simple_form_for(@stock_item) do |f| %>
  <%= f.error_notification %>

  <%= f.input :short_description, label: "Descrição curta" %>
  <%= f.input :long_description, label: "Descrição longa" %>

  <div class="row">
    <div class="col"> <%= f.button :submit, "Salvar", class: "btn btn-primary btn-block" %> </div>
    <div class="col"> <%= link_to "Cancelar", :back, class: "btn btn-secondary btn-block" %> </div>
  </div>
<% end %>
