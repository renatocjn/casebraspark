<p id="notice"><%= notice %></p>

<h1>Listagem de Locais</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Numero de items</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @placements.each do |placement| %>
      <tr>
        <td><%= placement.description %></td>
        <td><%= placement.items.count %></td>
        <td><%= link_to 'Detalhes', placement %></td>
        <td><%= link_to 'Editar', edit_placement_path(placement) %></td>
        <td><%= link_to 'Excluir', placement, method: :delete, data: { confirm: 'Você tem certeza??' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar novo local', new_placement_path %>
