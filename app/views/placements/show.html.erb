<div class="row">
  <div class="col-6">
    <p>
      <label>Descrição:</label>
      <%= @placement %>
    </p>
  </div>
  <div class="col-6">
    <p>
      <%= link_to 'Editar', edit_placement_path(@placement), class: "btn btn-primary btn-block" %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col">
    <p>
      <label>Contatos:</label>
      <%= simple_format @placement.contact %>
    </p>
  </div>

  <div class="col">
    <p>
      <label>Endereço:</label>
      <%= simple_format @placement.address %>
    </p>
  </div>
</div>



<% if @placement.items.any? %>
<hr>
<h4 class="text-center">Items alocados neste local</h4>
<table class="table table-hover table-sm text-center">
  <tr>
    <th scope="col">Plaqueta</th>
    <th scope="col">Tipo</th>
    <th scope="col">Marca</th>
    <th scope="col">Modelo</th>
    <th scope="col">Número de série</th>
    <th scope="col">Valor(R$)</th>
  </tr>
<% @placement.items.each do |item| %>
  <tr scope="row">
    <td> <%= link_to item.plate, item_path(item), class: "text-info" %> </td>
    <td> <%= item.type_pt_BR %> </td>
    <td> <%= item.brand %> </td>
    <td> <%= item.model %> </td>
    <td> <%= item.serial %> </td>
    <td> <%= number_to_currency item.value %> </td>
  </tr>
<% end %>
</table>
<% else %>
  <h4 class="text-center">Nenhum item alocado neste local</h4>
<% end %>