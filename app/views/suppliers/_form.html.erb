<%= simple_form_for(@supplier) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col">
      <%= f.input :name, label: "Nome do fornecedor" %>
      <%= f.input :address, as: :text, label: "Endereço" %>
    </div>
    <div class="col">
      <%= f.input :email, label: "Email de contato" %>
      <%= f.input :phones, as: :text, label: "Telefone(s) de contato" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= f.input :other, as: :text, label: "Outras informações" %>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <%= f.button :submit, "Salvar", class: "btn btn-primary btn-block" %>
    </div>
    <div class="col">
      <%= link_to "Cancelar", :back, class: "btn btn-secondary btn-block" %>
    </div>
  </div>
<% end %>
