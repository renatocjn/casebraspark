<%= simple_form_for(@operator) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name , label: "Nome completo:" %>
  <%= f.input :email, label: "E-mail:" %>

  <%= f.input :password, label: "Senha:" %>
  <%= f.input :password_confirmation, label: "Confirme sua senha:" %>

  <%= f.input :canAlocate, label: "Pode alocar?" %>
  <%= f.input :canBuy, label: "Pode fazer aquisições?" %>
  <%= f.input :isAdmin, label: "Administrador" %>

  <%= f.input :isBlocked, label: "Bloqueado" unless @operator.new_record? %>

  <%= f.submit "Salvar" %>

<% end %>
