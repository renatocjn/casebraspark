<%= simple_form_for(@operator) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name , label: "Nome completo:" %>
  <%= f.input :email, label: "E-mail:" %>

  <%= f.input :password, label: "Senha:" %>
  <%= f.input :password_confirmation, label: "Confirme sua senha:" %>

  <%= f.input :canAlocate, label: "Este usuário pode alocar?" %>
  <%= f.input :canBuy, label: "Este usuário pode fazer aquisições?" %>
  <%= f.input :isAdmin, label: "Este usuário é admin?" %>

  <%= f.submit "Salvar" %>

<% end %>
