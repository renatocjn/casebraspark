
<div class="row">
  <div class="col justify-content-end">
    <p>
      <label>Nome do operador:</label>
      <%= @operator.name %>
    </p>

    <p>
      <label>E-mail:</label>
      <%= mail_to @operator.email %>
    </p>
  </div>

  <div class="col">
    <h4> Permissões </h4>
    <p>
      <label>Pode Alocar?</label>
      <%= @operator.canAlocate ? "Sim" : "Não" %>
    </p>

    <p>
      <label>Pode Comprar?</label>
      <%= @operator.canBuy ? "Sim" : "Não" %>
    </p>

    <p>
      <label>Administrador?</label>
      <%= @operator.isAdmin ? "Sim" : "Não" %>
    </p>

    <p>
      <label>Bloqueado?</label>
      <%= @operator.isBlocked ? "Sim" : "Não" %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-6"></div>
  <div class="col-6">
    <%= link_to 'Editar', edit_operator_path(@operator), class: "btn btn-primary btn-block text-white" %>
  </div>
</div>
