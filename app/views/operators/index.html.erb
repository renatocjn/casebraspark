<p id="notice"><%= notice %></p>

<h1>Listagem de Operadores</h1>

<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>Nome</th>
      <th>E-mail</th>
      <th>Pode Alocar?</th>
      <th>Pode Comprar?</th>
      <th>Administrador?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operators.each do |operator| %>
      <tr>
        <td><%= operator.name %></td>
        <td><%= mail_to operator.email %></td>
        <td><%= operator.canAlocate %></td>
        <td><%= operator.canBuy %></td>
        <td><%= operator.isAdmin %></td>
        <td><%= link_to 'Detalhes', operator, class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Editar', edit_operator_path(operator), class: "btn btn-secondary btn-sm" %></td>
        <td><%#= link_to 'Excluir', operator, method: :delete, data: { confirm: 'VocÃª tem certeza??' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

